{
    "name": "harlem",
    "version": "1.0.0",
    "description": "Simple, unopinionated, lightweight and extensible state management for Vue 3",
    "repository": "https://github.com/andrewcourtice/harlem.git",
    "author": "Andrew Courtice <andrewcourtice@users.noreply.github.com>",
    "packageManager": "yarn@3.2.1",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "app",
        "core",
        "docs",
        "examples/*",
        "packages/*",
        "extensions/*",
        "plugins/*"
    ],
    "scripts": {
        "prepare": "husky install",
        "test": "vitest",
        "build": "lerna run build --no-private",
        "release": "lerna publish --force-publish",
        "lint": "eslint . --ignore-path .gitignore --ext .js,.ts,.mjs,.vue --quiet"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.4",
        "@commitlint/config-conventional": "^16.2.4",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "c8": "^7.11.2",
        "eslint": "^8.15.0",
        "eslint-plugin-vue": "^8.7.1",
        "happy-dom": "^3.2.0",
        "husky": "^8.0.1",
        "jsdom": "^19.0.0",
        "lerna": "^4.0.0",
        "standard-changelog": "^2.0.27",
        "tsup": "^5.12.7",
        "typescript": "^4.6.4",
        "vitest": "^0.12.4",
        "vue-eslint-parser": "^9.0.1"
    }
}
